function vf_ = pendulum_vf(t,x_,p_)
    Pi = %pi;
    theta      = x_(1);
    v          = x_(2);
    g          = p_(1);
    b          = p_(2);
    L          = p_(3);
    m          = p_(4);
    vf_ = zeros(2,1);
    vf_(1) = v;
    vf_(2) = -L^(-1)*g*sin(theta)-L^(-2)*v*m^(-1)*b;
endfunction

