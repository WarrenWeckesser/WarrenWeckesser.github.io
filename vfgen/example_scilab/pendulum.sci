function jac_ = pendulum_jac(t,x_,p_)
    Pi = %pi;
    theta      = x_(1);
    v          = x_(2);
    g          = p_(1);
    b          = p_(2);
    L          = p_(3);
    m          = p_(4);
    jac_ = zeros(2,2);
    jac_(1,2) = 1;
    jac_(2,1) = -L^(-1)*g*cos(theta);
    jac_(2,2) = -L^(-2)*m^(-1)*b;
endfunction

